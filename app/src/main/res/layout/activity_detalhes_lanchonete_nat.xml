<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/fundogerenciamento"
    android:layout_height="match_parent"
    tools:context=".natividadeView.lanchonete.DetalhesLanchoneteNatActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <include layout="@layout/toolbar" />

    </android.support.design.widget.AppBarLayout>


    <TextView
        android:id="@+id/txt_detalhe_nome_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:gravity="center"
        android:text="Nome" />

    <ImageView
        android:id="@+id/linha"
        android:layout_marginTop="10dp"
        android:src="@drawable/linha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
         android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/IMGEndereco"
            android:src="@drawable/iconeendereco"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtEndereco"
        android:layout_width="105dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Endereço:"/>

    <TextView
        android:id="@+id/txt_detalhe_local_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:text="Ra iriri"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/IMGAbre"
            android:src="@drawable/iconeabreas"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtHoras"
            android:layout_width="90dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="Abre às:"/>

        <TextView
            android:id="@+id/txt_detalhe_horario_empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="18h"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="50dp">

    <ImageView
        android:id="@+id/txtTele"
        android:src="@drawable/iconetelefone"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
         />

    <TextView
        android:id="@+id/txt_detalhe_telefone_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="(22)3841-1425"
        android:autoLink="phone" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"

        android:orientation="horizontal"
        android:layout_height="50dp">


    <ImageView
        android:id="@+id/txtWhats"
        android:src="@drawable/iconewhatsapp"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_detalhe_wpp_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="2299586578"
        android:autoLink="phone"
         />

    </LinearLayout>




</LinearLayout>