<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.CidadeActivity"
    android:background="@drawable/fundodetermineacidade1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="240dp"
        android:gravity="center">

        <TextView
            android:id="@+id/confirmarcidade"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/determine_sua_cidade"
            android:textAlignment="center"
            android:textColor="@color/Branco"
            android:textSize="18sp"
            android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerCidade"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <Button
        android:id="@+id/buttonConfirmar"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/button_principal"
        android:textColor="@color/Branco"
        android:layout_gravity="end"
        android:layout_marginRight="35dp"
        android:layout_marginTop="150dp"
        android:text="@string/confirmar" />

    </LinearLayout>


</LinearLayout>