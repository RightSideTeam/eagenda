<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".natividadeView.LoginAdminActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:srcCompat="@drawable/admin2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:padding="30dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">




        <EditText
            android:id="@+id/usuarioLogin"
            android:hint="UsuÃ¡rio"
            android:textSize="20sp"
            android:ems="10"
            android:padding="10dp"
            android:background="@drawable/edit_arredondado"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="40dp" />





        <EditText
            android:id="@+id/senhaLogin"
            android:hint="Senha"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:ems="10"
            android:background="@drawable/edit_arredondado"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="40dp" />




    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_entrar"
        android:layout_height="40dp"
        android:textColor="@color/Branco"
        android:textSize="15sp"
        android:text="ENTRAR" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:srcCompat="@drawable/ebranco" />


</LinearLayout>