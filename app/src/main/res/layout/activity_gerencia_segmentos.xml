<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".natividadeView.GerenciaSegmentosNatActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GERENCIAMENTO DE EMPRESAS"
            android:layout_marginTop="30dp"
            android:textColor="@color/Branco"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/buttonGerenciaLanchonetes"
            android:layout_marginTop="25dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_setinha"
            android:paddingRight="15dp"
            android:textSize="16sp"
            android:paddingLeft="15dp"
            android:textColor="@color/Branco"
            android:background="@drawable/button_segmentos"
            android:text="Lanchonetes" />

        <Button
            android:id="@+id/buttonGerenciaPizzarias"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_setinha"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            android:textColor="@color/Branco"
            android:background="@drawable/button_segmentos"
            android:text="Pizzarias" />

        <Button
            android:id="@+id/buttonGerenciaFarmacias"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_setinha"
            android:paddingRight="15dp"
            android:textSize="16sp"
            android:paddingLeft="15dp"
            android:textColor="@color/Branco"
            android:background="@drawable/button_segmentos"
            android:text="FarmÃ¡cias" />


    </LinearLayout>


</LinearLayout>